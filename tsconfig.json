{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": [
            "es2019",
            "es2020.string",
            "es2020.symbol.wellknown"
        ],
        "outDir": "./dist",
        "strict": true,
        "baseUrl": "./",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node",
            "jest"
        ],
        "esModuleInterop": true,
        "inlineSourceMap": true
    },
    "include": [
        "src/**/*.ts",
        "decs.d.ts"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}